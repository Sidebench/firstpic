<apex:page
  controller="UAApplicationCtrl"
  showHeader="false"
  sidebar="false"
  docType="html-5.0"
>
  <head>
    <title>Application Details</title>
    <style>
      .grid-pd [class*="col-"] {
        padding-bottom: 10px;
      }
    </style>
  </head>

  <c:UAHeader ActivePage="applications" acct="{!userAcct}" />

  <apex:form id="form">
    <div class="main-panel">
      <div class="content">
        <span style="float: right; padding-bottom: 10px">
          <apex:commandButton
            value="Add Review"
            action="{!createReview}"
            status="pageStatus"
            styleClass="primary"
            reRender="form"
            rendered="{!readOnly && NOT(reviewed)}"
          />
          <a
            href="{!URLFOR($Site.Prefix+'/UAApplicationPDF?AppId='+app.Id)}"
            target="_blank"
            class="btn primary"
            >Export to PDF</a
          >
        </span>
        <h2>{!app.Organization_Name__c}</h2>

        <table class="table">
          <tr>
            <td><strong>App #: </strong> {!app.Name}</td>
            <td><strong>EIN #: </strong> {!app.EIN__c}</td>
            <td>
              <strong>Address: </strong>
              {!app.Address__c}, {!app.City__c}, {!app.State__c}
              {!app.Postal_Zip_Code__c}
            </td>
          </tr>
        </table>
        <table class="table">
          <tr>
            <td><strong>Status: </strong> {!app.Status__c}</td>
            <apex:outputPanel
              rendered="{!reviewed || currentUser.Profile.Name == 'UA Admin'}"
            >
              <td>
                <strong>Score: </strong>
                <apex:outputText value="{!score}" />
              </td>
            </apex:outputPanel>
            <td>
              <strong>Submitted Date: </strong>
              <apex:outputText value="{0, date, MM'/'dd'/'yyyy}">
                <apex:param value="{!app.Submitted_Date__c}" />
              </apex:outputText>
            </td>
            <apex:outputPanel
              rendered="{!app.Awarded_Date__c != null || app.Closed_Date__c != null}"
            >
              <td>
                <strong>Closed Date: </strong>
                <apex:outputText value="{0, date, MM'/'dd'/'yyyy}">
                  <apex:param
                    value="{!IF(app.Closed_Date__c != null, app.Closed_Date__c, app.Awarded_Date__c)}"
                  />
                </apex:outputText>
              </td>
            </apex:outputPanel>
          </tr>
        </table>

