                        value="{!review.How_Program_Will_Be_Delivered_Score__c}"
                        rendered="{!reviewed}"
                      />
                      <br />
                      <strong>Comments: </strong>
                      <apex:inputField
                        value="{!review.How_Program_Will_Be_Delivered_Notes__c}"
                        rendered="{!NOT(readOnly) && NOT(reviewed)}"
                      />
                      <apex:outputField
                        value="{!review.How_Program_Will_Be_Delivered_Notes__c}"
                        rendered="{!reviewed}"
                      />
                    </div>
                  </apex:outputPanel>
                </div>
              </apex:outputPanel>

              <div class="row">
