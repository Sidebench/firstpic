        <div class="panel panel-default">
          <div class="panel-heading">Contact Information</div>
          <div class="panel-body">
            <apex:outputPanel rendered="{!app.RecordType.Name != 'UA Pride'}">
              <h5 style="border-bottom: 1px solid #ccc">CEO/ED</h5>
              <div class="row">
                <div class="col-xs-6 col-sm-3">
                  <strong>First Name: </strong>
                  {!app.CEO_First_Name__c}
                </div>
                <div class="col-xs-6 col-sm-3">
                  <strong>Last Name: </strong>
                  {!app.CEO_Last_Name__c}
                </div>
                <div class="col-xs-6 col-sm-3">
                  <strong>Email: </strong>
                  {!app.CEO_Email__c}
                </div>
                <div class="col-xs-6 col-sm-3">
                  <strong>Phone: </strong>
                  {!app.CEO_Phone__c}
                </div>
              </div>
              <br />
            </apex:outputPanel>
            <h5 style="border-bottom: 1px solid #ccc">Program Contact</h5>
            <div class="row">
              <div class="col-xs-6 col-sm-3">
                <strong>First Name: </strong>
                {!app.Program_Contact_First_Name__c}
              </div>
              <div class="col-xs-6 col-sm-3">
                <strong>Last Name: </strong>
                {!app.Program_Contact_Last_Name__c}
              </div>
              <div class="col-xs-6 col-sm-3">
                <strong>Email: </strong>
                {!app.Program_Contact_Email__c}
              </div>
              <div class="col-xs-6 col-sm-3">
                <strong>Phone: </strong>
                {!app.Program_Contact_Phone__c}
              </div>
            </div>
            <apex:outputPanel rendered="{!app.RecordType.Name == 'UA Pride'}">
              <br />
              <div class="row">
                <div class="col-xs-12">
                  <strong>Organization Mission Statement: </strong>
                  <apex:outputField value="{!app.Mission_Statement__c}" />
                </div>
              </div>
            </apex:outputPanel>
          </div>
        </div>

        <div class="panel panel-default">
          <div class="panel-heading">Request Details</div>
          <div class="panel-body grid-pd-md">
            <apex:outputPanel rendered="{!app.RecordType.Name == 'UA Pride'}">
              <div class="row">
                <div class="col-xs-12">
                  <strong>Total Amount Requested from Under Armour: </strong>
                  <apex:outputField value="{!app.Total_Amount_Requested__c}" />
                </div>
              </div>
              <div class="row">
                <div class="col-xs-9">
                  <strong
                    >Please explain how UA grant funds will be utilized.
                  </strong>
                  <br />{!app.How_Funds_Utilized__c}
                </div>
                <apex:outputPanel rendered="{!reviewed || NOT(readOnly)}">
                  <div class="col-xs-3">
                    <strong>Score: </strong>
                    <apex:inputField
                      value="{!review.How_Funds_Utilized_Score__c}"
                      rendered="{!NOT(readOnly) && NOT(reviewed)}"
                    />
                    <apex:outputField
                      value="{!review.How_Funds_Utilized_Score__c}"
                      rendered="{!reviewed}"
                    />
                    <br />
                    <strong>Comments: </strong>
                    <apex:inputField
                      value="{!review.How_Funds_Utilized_Notes__c}"
                      rendered="{!NOT(readOnly) && NOT(reviewed)}"
                    />
                    <apex:outputField
                      value="{!review.How_Funds_Utilized_Notes__c}"
                      rendered="{!reviewed}"
                    />
                  </div>
                </apex:outputPanel>
              </div>
              <div class="row">
                <div class="col-xs-12">
                  <strong
