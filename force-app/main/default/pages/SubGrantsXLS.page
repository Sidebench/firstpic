<apex:page
  controller="SubGrantsCtrl"
  action="{!getLists}"
  showHeader="false"
  sidebar="false"
  readOnly="true"
  contentType="application/vnd.ms-excel#SubGrants.xls"
>
  <h4>{!status} Sub-Grants</h4>
  <table>
    <tr>
      <th>Sub-Grant Name</th>
      <th>Organization</th>
      <th>Awarded</th>
      <th>Total Budgeted</th>
      <th>Requested Amount</th>
      <th>Approved Amount</th>
      <th>Balance</th>
      <th style="{!IF(displayStatus,'','width: 0')}">
        <apex:outputText value="Status" rendered="{!displayStatus}" />
      </th>
      <apex:outputPanel rendered="{!portalName == 'Ripken'}">
        <th>Equipment Amount</th>
        <th>EIN</th>
        <th>Street Address</th>
        <th>City</th>
        <th>State</th>
        <th>Zip Code</th>
      </apex:outputPanel>
    </tr>
    <apex:repeat value="{!allsubgrants}" var="i">
      <tr>
        <td>{!i.Name}</td>
        <td>{!i.Organization_Name__c}</td>
        <td>
          <apex:outputfield value="{!i.Amount__c}" />
        </td>
        <td>
          <apex:outputField value="{!i.Total_Budgeted__c}" />
        </td>
        <td>
          <apex:outputfield value="{!i.Reimbursement_Requested_Amount__c}" />
        </td>
        <td>
          <apex:outputfield value="{!i.Reimbursement_Approved_Amount__c}" />
        </td>
        <td>
          <apex:outputfield value="{!i.Balance__c}" />
        </td>
        <td>
          <apex:outputField
            value="{!i.Grant_Status__c}"
            rendered="{!displayStatus}"
          />
        </td>
        <apex:outputPanel rendered="{!portalName == 'Ripken'}">
          <td>
            <apex:outputfield value="{!i.Equipment_and_Materials_Value__c}" />
          </td>
          <td>{!i.EIN__c}</td>
          <td>{!i.Account_Address__c}</td>
          <td>{!i.Account_City__c}</td>
          <td>{!i.Account_State__c}</td>
          <td>{!i.Account_Zip__c}</td>
        </apex:outputPanel>
      </tr>
    </apex:repeat>
  </table>
</apex:page>
